---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import { ShieldCheck, Leaf, Award, Users, Clock, Lock } from "lucide-react";

const painPoints = [
	{
		title: "Guaranteed Cover",
		desc: "Sickness or holiday? We have a standby team ready to deploy, so you never miss a service.",
		icon: Users,
	},
	{
		title: "Security Vetted",
		desc: "Every staff member is DBS checked, uniformed, and trained in site security protocols.",
		icon: Lock,
	},
	{
		title: "Out of Hours",
		desc: "We work around your schedule—late nights or early mornings—to ensure zero disruption.",
		icon: Clock,
	},
];

const sectors = [
	{
		title: "Corporate Offices",
		desc: "Create a first impression that lasts. We maintain a spotless environment that impresses clients.",
	},
	{
		title: "Medical & Clinical",
		desc: "Infection control is critical. Our teams are trained in CQC-compliant cleaning protocols.",
	},
	{
		title: "Education & Schools",
		desc: "Safe, non-toxic cleaning for learning environments. We work during term breaks and evenings.",
	},
];
---

<Layout title="Pristine Commercial | Corporate Hygiene Partners">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Modern office cleaning"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.4]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-300 ring-1 ring-white/20 hover:ring-white/40 transition-all uppercase tracking-wide font-semibold"
						>
							ISO 9001 Accredited • Nationwide Coverage
						</div>
					</div>
					<h1
						class="text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-lg"
					>
						Elevating Standards in <span class="text-accent"
							>Commercial Hygiene</span
						>
					</h1>
					<p
						class="mt-6 text-xl leading-8 text-gray-200 drop-shadow-md max-w-2xl"
					>
						Creating pristine workspaces for productive teams. We
						provide reliable, high-specification cleaning for
						offices, clinics, and commercial premises.
					</p>
					<div class="mt-10 flex flex-wrap items-center gap-6">
						<a
							href="/contact"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Request Site Audit
						</a>
						<a
							href="/services"
							class="rounded-full bg-white/10 backdrop-blur-sm border border-white/20 px-8 py-3.5 text-lg font-semibold text-white hover:bg-white hover:text-primary transition-all duration-300"
						>
							View Sectors <span aria-hidden="true">→</span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- TrustBar -->
		<div class="relative z-20 bg-white">
			<TrustBar
				client:visible
				items={[
					{
						title: "98% Retention",
						subtitle: "We keep our clients",
						icon: Award,
						colorClass: "text-blue-500",
					},
					{
						title: "Eco-Certified",
						subtitle: "Sustainable Products",
						icon: Leaf,
						colorClass: "text-green-500",
					},
					{
						title: "ISO 9001",
						subtitle: "Quality Accredited",
						icon: ShieldCheck,
						colorClass: "text-yellow-500",
					},
				]}
			/>
		</div>

		<!-- Pain Points (Why Switch?) -->
		<FeatureSection
			client:visible
			title="Cleaning That You Never Have to Manage"
			subtitle="The Guaranteed Solution"
			description="Your facilities team has better things to do than chase cleaners. We operate with military precision, using digital attendance tracking and rigorous quality audits. We turn up, we execute, and we let you get on with business."
			features={painPoints}
			imageSrc="/hero.png"
			align="left"
			quote={null}
			author={null}
		/>

		<!-- Sector Expertise -->
		<div class="py-24 bg-gray-50">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Sector Expertise
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
					>
						Specialist Hygiene for Every Sector
					</p>
				</div>
				<div class="grid md:grid-cols-3 gap-8">
					{
						sectors.map((sector) => (
							<div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
								<h3 class="text-xl font-bold text-gray-900 mb-4">
									{sector.title}
								</h3>
								<p class="text-gray-600">{sector.desc}</p>
								<a
									href="/services"
									class="text-accent text-sm font-semibold mt-6 block hover:underline"
								>
									Learn more &rarr;
								</a>
							</div>
						))
					}
				</div>
			</div>
		</div>

		<!-- Tech / Client Portal Section -->
		<div class="py-24 bg-gray-900 text-white relative overflow-hidden">
			<div class="absolute inset-0 bg-accent/10"></div>
			<!-- color tint -->
			<div class="mx-auto max-w-7xl px-6 lg:px-8 relative z-10">
				<div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
					<div>
						<h2
							class="text-base font-semibold leading-7 text-accent mb-2"
						>
							Technologically Advanced
						</h2>
						<h2
							class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-6"
						>
							Total Transparency with Our Client Portal
						</h2>
						<p class="text-lg text-gray-300 mb-8">
							Forget paper logbooks that get lost. We use smart
							technology to keep you informed. Real-time
							visibility into your cleaning schedule and
							performance.
						</p>
						<ul class="space-y-6">
							<li class="flex gap-4">
								<div
									class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-accent"
								>
									<svg
										class="h-6 w-6 text-white"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										><path
											stroke-linecap="round"
											stroke-linejoin="round"
											d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3"
										></path></svg
									>
								</div>
								<div>
									<h3 class="text-lg font-bold text-white">
										Real-Time Audits
									</h3>
									<p class="text-gray-400">
										Supervisors upload photo-verified
										reports directly to your portal.
									</p>
								</div>
							</li>
							<li class="flex gap-4">
								<div
									class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-accent"
								>
									<svg
										class="h-6 w-6 text-white"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										><path
											stroke-linecap="round"
											stroke-linejoin="round"
											d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
										></path></svg
									>
								</div>
								<div>
									<h3 class="text-lg font-bold text-white">
										Digital Checklists
									</h3>
									<p class="text-gray-400">
										See exactly what was cleaned and when,
										down to the minute.
									</p>
								</div>
							</li>
						</ul>
						<div class="mt-10">
							<a
								href="#"
								class="text-sm font-semibold leading-6 text-white border-b border-white hover:text-accent hover:border-accent transition-colors"
								>Log in to demo portal &rarr;</a
							>
						</div>
					</div>
					<div class="mt-16 lg:mt-0">
						<div
							class="relative rounded-xl bg-gray-800 p-4 ring-1 ring-white/10 shadow-2xl"
						>
							<!-- Mock Portal Interface -->
							<div class="space-y-4">
								<div
									class="flex justify-between border-b border-gray-700 pb-4"
								>
									<span class="text-gray-400"
										>Site: HQ Building A</span
									>
									<span class="text-green-400 font-mono"
										>Status: COMPLETED</span
									>
								</div>
								<div class="space-y-2">
									<div
										class="flex items-center justify-between text-sm"
									>
										<span class="text-white"
											>Main Reception</span
										>
										<span class="text-gray-500"
											>06:30 AM</span
										>
									</div>
									<div
										class="h-2 bg-gray-700 rounded-full overflow-hidden"
									>
										<div class="h-full bg-green-500 w-full">
										</div>
									</div>
								</div>
								<div class="space-y-2">
									<div
										class="flex items-center justify-between text-sm"
									>
										<span class="text-white"
											>Boardroom 1</span
										>
										<span class="text-gray-500"
											>07:15 AM</span
										>
									</div>
									<div
										class="h-2 bg-gray-700 rounded-full overflow-hidden"
									>
										<div class="h-full bg-green-500 w-full">
										</div>
									</div>
								</div>
								<div class="space-y-2">
									<div
										class="flex items-center justify-between text-sm"
									>
										<span class="text-white"
											>Washrooms (2F)</span
										>
										<span class="text-gray-500"
											>07:45 AM</span
										>
									</div>
									<div
										class="h-2 bg-gray-700 rounded-full overflow-hidden"
									>
										<div class="h-full bg-green-500 w-full">
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<Testimonials
			client:visible
			reviews={[
				{
					text: "We haven't had a single missed shift in 3 years. After struggling with three different agencies, this team was a breath of fresh air. The transition was smooth, the staff are polite, and the monthly audit reports make my job incredibly easy.",
					author: "Sarah Jenkins",
					location: "FinTech Solutions",
					role: "Facilities Director",
					rating: 5,
				},
				{
					text: "They understand clinical standards. Our dental practice requires strict hygiene compliance. The team is knowledgeable about infection control and consistently passes our internal CQC mock inspections.",
					author: "Dr. A. Patel",
					location: "City Dental",
					role: "Practice Manager",
					rating: 5,
				},
				{
					text: "The portal is a game changer. I don't have to chase for updates; I can just check the dashboard and see everything is clean before the staff arrive.",
					author: "Michael T.",
					location: "Corporate HQ",
					role: "Operations Manager",
					rating: 5,
				},
			]}
		/>

		<!-- CTA Section -->
		<div class="bg-gray-50 py-16 sm:py-24">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2
						class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
					>
						Is your current cleaning provider missing the mark?
					</h2>
					<p
						class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-600"
					>
						Let’s discuss a bespoke cleaning schedule that improves
						standards and reduces costs.
					</p>
					<div class="mt-10 flex justify-center gap-x-6">
						<a
							href="/contact"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all"
							>Request a Site Audit & Proposal</a
						>
					</div>
				</div>
			</div>
		</div>

		<FAQ client:visible />
	</main>
</Layout>
